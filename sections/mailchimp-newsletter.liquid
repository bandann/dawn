<div
  class="newsletter center newsletter-mailchimp-section"
  style="background-color: {{ section.settings.background_color }};padding:3rem 0;"
>
  <div class="page-width">
    <div class="newsletter-mailchimp-flex">
      <div class="newsletter-mailchimp-content-col">
        {%- if section.settings.heading != blank -%}
          <span class="newsletter-mailchimp-heading">{{ section.settings.heading | escape }}</span>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <div class="newsletter__subheading rte newsletter-mailchimp-subheading">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}
      </div>
      <div class="newsletter-mailchimp-form-col">
        <div class="newsletter-mailchimp-form-wrapper">
          {%- form 'customer', id: 'ContactFooter', class: 'newsletter-form newsletter-mailchimp-form' -%}
            <div class="newsletter-form__field-wrapper">
              <!-- Campo de correo -->
              <div class="field newsletter-mailchimp-field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input newsletter-mailchimp-input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="Enter email address"
                  required
                >
              </div>

              <!-- Botón de subscripción -->
              <button
                type="submit"
                class="button button--primary newsletter-mailchimp-button"
                name="commit"
                id="Subscribe"
              >
                Subscribete <span style="margin-left:0.5em;">&rarr;</span>
              </button>
            </div>

            {%- if form.errors -%}
              <small
                class="newsletter-form__message form__message newsletter-mailchimp-message"
                id="ContactFooter-error"
              >
                {%- render 'icon-error' -%}
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </small>
            {%- endif -%}

            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message newsletter-mailchimp-message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                {%- render 'icon-success' -%}
                {{- 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter Mailchimp",
  "tag": "section",
  "class": "section section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Subscribe to our newsletter",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "default": "<p>A short sentence describing what someone will receive by subscribing</p>",
      "label": "Subheading"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Mailchimp"
    }
  ]
}
{% endschema %}
{% stylesheet %}
  .newsletter-mailchimp-flex {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 2rem;
    justify-content: center;
  }
  .newsletter-mailchimp-subheading {
    text-align: left;
    font-size: 1rem;
  }
  .newsletter-mailchimp-heading {
    font-size: 2rem;
    font-weight: bold;
  }
  .newsletter-mailchimp-content-col {
    flex: 1 1 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    min-width: 220px;
    max-width: 400px;
  }
  .newsletter-mailchimp-form-col {
    flex: 1 1 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    min-width: 220px;
    max-width: 400px;
  }
  .newsletter-mailchimp-form-wrapper {
    width: 100%;
    max-width: 400px;
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: flex-end;
  }
  .newsletter-form__field-wrapper {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
  }
  .newsletter-mailchimp-field {
    flex: 1;
  }
  .field__input.newsletter-mailchimp-input {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1rem;
    box-sizing: border-box;
  }
  .button.button--primary.newsletter-mailchimp-button {
    background-color: #000;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-size: 1.5rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  .button.button--primary.newsletter-mailchimp-button:hover {
    background-color: #333;
  }
  @media (max-width: 768px) {
    .newsletter-mailchimp-flex {
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }
    .newsletter-mailchimp-content-col,
    .newsletter-mailchimp-form-col {
      max-width: 100%;
      min-width: 0;
      width: 100%;
      justify-content: center;
      align-items: center;
    }
    .newsletter-mailchimp-form-wrapper {
      max-width: 100%;
      justify-content: center;
    }
    .newsletter-form__field-wrapper {
      justify-content: center;
    }
  }
{% endstylesheet %}
