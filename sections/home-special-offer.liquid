{% schema %}
{
  "name": "Home Special Offer",
  "settings": [],
  "presets": [
    {
      "name": "Home Special Offer"
    }
  ]
}
{% endschema %}

{{ 'section-home-special-offer.css' | asset_url | stylesheet_tag }}
<script src="{{ 'component-special-offers.js' | asset_url }}" defer></script>

{% assign product = collections.all.products.first %}

<div class="home-special-offer-section">
  <div class="home-special-offer-image">
    <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
  </div>
  <div class="home-special-offer-content">
    <h2>Â¡Oferta Especial!</h2>
    <h3>{{ product.title }}</h3>
    <p>{{ product.description | truncate: 150 }}</p>
    <div class="home-special-offer-price">
      <span class="price">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-at-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    <div class="special-offers__timer">
      <span class="offer-timer"></span>
      <span class="offer-warning" style="display:none;"></span>
    </div>
  </div>
</div>